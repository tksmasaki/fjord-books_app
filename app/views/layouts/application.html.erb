<!DOCTYPE html>
<html>
  <head>
    <title>BooksApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
      <header>
        <p class="right-aligned">
          <%= link_to "#{current_user.email}", user_path(current_user) %> |
          <% if request.path.match(/\A\/books/) %>
            <%= link_to t('views.links.users_index'), users_path %> |
          <% else %>
            <%= link_to t('views.links.books_index'), books_path %> |
          <% end %>
          <%= link_to t('views.links.sign_out'), destroy_user_session_path, method: :delete %>
        </p>
      </header>
    <% end %>
    <% if request.path == '/users/sign_in' %>
      <p id="notice"><%= notice %></p>
      <p id="alert"><%= alert %></p>
    <% end %>
    <%= yield %>
  </body>
</html>

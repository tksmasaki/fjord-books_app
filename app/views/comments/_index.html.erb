<div>
  <% if comments.empty? %>
    <p><%= t '.not_found' %></p>
  <% else %>
    <% comments.each do |comment| %>
      <div>
        <p><%= comment.comment %></p>
        <%= "#{comment.author_name} | #{l comment.created_at, format: :short}" %>
        <% if comment.user_id == current_user.id %>
          | <%= link_to t('views.common.destroy'), polymorphic_path([parent_instance, comment]),
                          method: :delete, data: { confirm: t('views.common.delete_confirm') } %>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>

<%= form_with model: [parent_instance, comment] do |f| %>
  <% if comment.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= t("errors.messages.not_saved.other", count: comment.errors.count,
                                                 resource: Comment.model_name.human)%>
      </h2>
      <ul>
        <% comment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :comment %>
    <%= f.text_area :comment, required: true %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
